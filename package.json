{
  "name": "MyAwesomeProject",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "concurrently --names \"BUILD,PACKAGER\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w\" \"react-native start\"",
    "storybook": "concurrently --names \"BUILD,PACKAGER\" -c \"bgBlue.bold,bgMagenta.bold\" \"tsc -w\" \"storybook start -p 7007\"",
    "run:android_emulator": "react-native run-android & emulator",
    "run:android": "react-native run-android",
    "run:ios_emulator": "react-native run-ios --simulator=",
    "watch:build": "tsc -w",
    "build:tsc": "tsc",
    "react:clean": "rimraf lib",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "rnpm": {
    "assets": ["./assets"]
  },
  "dependencies": {
    "react": "16.2.0",
    "react-native": "0.52.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.3.8",
    "@storybook/addon-links": "^3.3.8",
    "@storybook/react-native": "^3.3.8",
    "@types/enzyme": "3.1.6",
    "@types/enzyme-adapter-react-16": "1.0.1",
    "@types/jest": "22.0.1",
    "@types/react": "16.0.34",
    "@types/react-native": "0.51.9",
    "@types/react-test-renderer": "16.0.0",
    "babel-jest": "19.0.0",
    "babel-preset-react-native": "1.9.1",
    "concurrently": "3.5.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "jest": "22.0.6",
    "prop-types": "^15.6.0",
    "react-dom": "16.2.0",
    "react-native-mock-render": "0.0.19",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "ts-jest": "22.0.1",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
 "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "<rootDir>/setupTest.js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
